[Unit]
Description=Bootstrap on %I
After=getty-pre.target
After=systemd-modules-load.service
IgnoreOnIsolate=yes
ConditionPathExists=/dev/tty0

[Service]
Environment=TERM=linux HOME=/
ExecStart=-/opt/bootstrap/bootstrap.sh
Type=idle
Restart=always
RestartSec=0
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/%I
TTYReset=no
TTYVHangup=no
TTYVTDisallocate=no
IgnoreSIGPIPE=no
SendSIGHUP=no
Restart=no

[Install]
WantedBy=getty.target
DefaultInstance=tty1
