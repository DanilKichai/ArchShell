[Unit]
Description=Bootstrap on %I
IgnoreOnIsolate=yes
ConditionPathExists=/dev/tty0

[Service]
Environment=TERM=linux HOME=/
ExecStart=/usr/local/bin/bootstrap
Type=idle
Restart=always
RestartSec=0
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/%I
TTYReset=no
TTYVHangup=no
TTYVTDisallocate=no
IgnoreSIGPIPE=no
SendSIGHUP=no
Restart=no

[Install]
WantedBy=KLoader.target
DefaultInstance=tty1
