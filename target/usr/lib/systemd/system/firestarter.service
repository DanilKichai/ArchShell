[Unit]
Description=Firestarter Runner
Requires=firestarter-pre.target network-online.target
After=firestarter-pre.target network-online.target
IgnoreOnIsolate=yes
ConditionPathExists=/dev/tty0

[Service]
Type=idle
Environment=TERM=linux HOME=/root PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin
ExecStartPre=/usr/bin/mkdir -p /root
ExecStart=/opt/firestarter/runner
Restart=no
StandardInput=tty
StandardOutput=tty
TTYPath=/dev/tty1
TTYReset=no
TTYVHangup=no
TTYVTDisallocate=no
